        </com.stevedamien.views.VScroll>

        <LinearLayout
            android:id="@+id/buttonArea"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"></LinearLayout>

    </LinearLayout>
